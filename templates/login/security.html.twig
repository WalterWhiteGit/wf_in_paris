{% extends 'include/base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/login/login.css') }}">

    {%  endblock %}


{% block main %}

    <main>

        <section class="contain-form">

{# formulaire de connexion #}

        <div class="form-login">

            <h2 class="title-form log">{{ 'm-title-form' | trans ({}, 'messages') }}</h2>


            <h3>{{ 'log-title' | trans ({}, 'messages') }}</h3>
            <form action="{{ path('app.security.login') }} " method="post">

{# Champ identifiant de connexion #}
                <div>
                    <label for="username">{{ 'user_name'| trans ({},'userform') }}</label>
                        </div>
                <div>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                         </div>
{# Champ mot de passe #}
                <div>
                     <label for="password">{{ 'password' | trans ({}, 'userform') }}</label>
                         </div>
                <div>
                    <input type="password" id="password" name="_password" />
                         </div>
                {# <input type="hidden" name="_target_path" value="/account"/> #}

{# Bouton connexion #}
                    <button class="log" type="submit">{{ 'go' | trans ({}, 'buttons') }}</button>
{# Lien: MDP oublié #}
                <div class="forgot-pwd">
                    <a class="forgot-link" href="#">{{ 'forgot_password' | trans ({}, 'userform') }}</a>
                    </div>
            </form>

{# Champ erreur si identifiant, mdp erroné #}
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
         </div>

            <hr>

 {# Formulaire d'inscription #}
            <div class="form-login">
                <h2 class="title-form create">{{ 'n-title-form' | trans ({}, 'messages') }}</h2>

                <h3>{{ 'account-title' | trans ({}, 'messages') }}</h3>

                <form action="{{ path('app.security.login') }} " method="post">
                    <div>
                        <label for="username">{{ 'user_name'| trans ({},'userform') }}</label>
                    </div>
                    <div>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                    <div>
                        <label for="password">{{ 'password' | trans ({}, 'userform') }}</label>
                    </div>
                    <div>
                        <input type="password" id="password" name="_password" />
                    </div>
                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}

                    <button class="create" type="submit">{{ 'validate-account' | trans ({}, 'buttons') }}</button>
                </form>

            </div>

        </section>

    </main>

{% endblock %}